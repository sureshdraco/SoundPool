<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#ffffff"
    tools:context="com.maximcedaroff.sounpoolont.All">

    <LinearLayout
        android:id="@+id/Top"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:background="@android:color/transparent"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:gravity="center">

    </LinearLayout>


    <LinearLayout
        android:id="@+id/Belowtop"
        android:background="@android:color/transparent"
        android:layout_below="@id/Top"
        android:layout_width="match_parent"
        android:layout_height="60dp"

        android:orientation="horizontal"
        android:gravity="center">


        <Button
            android:id="@+id/menu"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_marginRight="286dp"
            android:layout_marginEnd="80dp"

            android:background="@drawable/hamburger" />


        <Button
            android:id="@+id/a1"
            android:layout_width="80dp"
            android:layout_height="60dp"

            android:background="@drawable/a_press" />

        <Button
            android:id="@+id/bb2"
            android:layout_width="80dp"
            android:layout_height="60dp"

            android:background="@drawable/b_unpress" />



    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:id="@+id/linearLayout"
        android:layout_gravity="center_horizontal|top"
        android:layout_below="@+id/Belowtop"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout4"

            android:layout_marginTop="15dp">

            <Button

                android:layout_width="109dp"
                android:layout_height="106dp"

                android:id="@+id/button1"
                android:background="@drawable/button_unpress" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="109dp"
                android:layout_height="106dp"

                android:id="@+id/button2"
                android:background="@drawable/button_unpress" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="109dp"
                android:layout_height="106dp"

                android:id="@+id/button3"
                android:background="@drawable/button_unpress" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout6">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="109dp"
                android:layout_height="106dp"

                android:id="@+id/button4"
                android:background="@drawable/button_unpress" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="109dp"
                android:layout_height="106dp"

                android:id="@+id/button5"
                android:background="@drawable/button_unpress" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="109dp"
                android:layout_height="106dp"

                android:id="@+id/button6"
                android:background="@drawable/button_unpress" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="109dp"
                android:layout_height="106dp"

                android:id="@+id/button7"
                android:background="@drawable/button_unpress" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="109dp"
                android:layout_height="106dp"

                android:id="@+id/button8"
                android:background="@drawable/button_unpress" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="109dp"
                android:layout_height="106dp"

                android:id="@+id/button9"
                android:background="@drawable/button_unpress" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="109dp"
                android:layout_height="106dp"

                android:id="@+id/button10"
                android:background="@drawable/stop" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:id="@+id/button11"

                android:layout_width="109dp"
                android:layout_height="106dp"
                android:background="@drawable/stop"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="109dp"
                android:layout_height="106dp"

                android:id="@+id/button12"
                android:background="@drawable/stop" />
        </LinearLayout>

    </LinearLayout>













    <LinearLayout
        android:id="@+id/layoutDots"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginBottom="25dp"
        android:layout_above="@+id/adView" />



    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="ca-app-pub-3940256099942544/6300978111" />

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_layout"

        app:tabBackground="@drawable/tab_selector"
        app:tabGravity="center"
        app:tabIndicatorHeight="0dp"
        android:layout_above="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
         />


</RelativeLayout>